<div class="alert-login4">
  <%= bootstrap_devise_error_messages! %>
</div>

<div class="container-login4">
  <div class="yohaku-login4">
  </div>

  <div class="card border-0 p-5 text-center">
    <%= link_to root_path do %>
      <div class="d-flex align-items-center justify-content-center mb-5">
        <div class="mr-4">
          <%= image_tag 'symbol-mark.png', size: '45x45' %>
        </div>
        <div class="text-dark" style="font-size: 3rem; font-family: 'Kiwi Maru', serif;">
          料理のあぷり
        </div>
      </div>
    <% end %>

    <div class="mb-5" style="font-size: 2.2rem;">
      パスワードの再設定
    </div>

    <div class="mb-5" style="font-size: 1.2rem;">
      新しいパスワードを入力してください
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group mb-4 mt-3">
        <%= f.password_field :password,
                             autofocus: true,
                             autocomplete: "new-password",
                             class: "form-control text-dark",
                             style: "font-size: 1.4rem;",
                             required: true,
                             minlength: @minimum_password_length,
                             maxlength: '128',
                             placeholder: "新しいパスワード（6文字以上）" %>
      </div>

      <div class="form-group mb-5">
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "form-control text-dark",
                             style: "font-size: 1.4rem;",
                             required: true,
                             minlength: @minimum_password_length,
                             maxlength: '128',
                             placeholder: "新しいパスワード（確認用）" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit 'パスワードを再設定', class:"btn btn-color01 btn-block" %>
      </div>
    <% end %>
  </div>

  <div class="yohaku-login4">
  </div>
</div>
