<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5"><%= t('.forgot_your_password') %></h1>
</div>
<%= bootstrap_devise_error_messages! %>

<div class="container-login">
  <div class="text-left p-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "form-control",
                          required: true,
                          maxlength: '100' %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class:"btn btn-danger btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
