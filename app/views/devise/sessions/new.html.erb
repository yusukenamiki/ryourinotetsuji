<div class="alert-login4">
  <%= render 'shared/flash_messages' %>
</div>

<div class="container-login4">
  <div class="yohaku-login4">
  </div>

  <div class="card border-0 p-5 text-center">
    <%= link_to root_path do %>
      <div class="d-flex align-items-center justify-content-center mb-5">
        <div class="mr-4">
          <%= image_tag 'symbol-mark.png', size: '45x45' %>
        </div>
        <div class="text-dark" style="font-size: 3rem; font-family: 'Kiwi Maru', serif;">
          料理のあぷり
        </div>
      </div>
    <% end %>

    <div class="mb-5" style="font-size: 2.2rem;">
      ログイン
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-4 mt-3">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "form-control text-dark",
                          style: "font-size: 1.4rem;",
                          required: true,
                          maxlength: '254',
                          placeholder: "メールアドレス" %>
      </div>

      <div class="form-group mb-5">
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "form-control text-dark",
                             style: "font-size: 1.4rem;",
                             required: true,
                             minlength: @minimum_password_length,
                             maxlength: '128',
                             placeholder: "パスワード" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit t('.sign_in'), class:"btn btn-outline-color01 btn-block" %>
      </div>
    <% end %>

    <%= link_to users_guest_sign_in_path, method: :post do %>
      <button type="button" class="btn btn-color01 btn-block">ゲストログイン</button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="yohaku-login4">
  </div>
</div>
