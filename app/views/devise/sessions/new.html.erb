<%= render 'shared/flash_messages' %>

<div class="container-login">
  <div class="card border-0 p-5 text-center">
    <%= link_to root_path do %>
      <div class="text-dark mb-5" style="font-size: 3.4rem; font-family: 'Kiwi Maru', serif;">
        レシピ館
      </div>
    <% end %>

    <div class="mb-5" style="font-size: 2.2rem;">
      ログイン
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-4 mt-3">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "form-control text-dark",
                          style: "font-size: 1.4rem; padding-right: 5.95rem;",
                          required: true,
                          maxlength: '50',
                          placeholder: "メールアドレス" %>
      </div>

      <div class="form-group mb-5">
        <%= f.password_field :password,
                             autocomplete: "current-password",
                             class: "form-control text-dark",
                             style: "font-size: 1.4rem;",
                             required: true,
                             minlength: @minimum_password_length,
                             maxlength: '30',
                             placeholder: "パスワード" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit t('.sign_in'), class:"btn btn-warning btn-block" %>
      </div>
    <% end %>

    <%= link_to users_guest_sign_in_path, method: :post do %>
      <button type="button" class="btn btn-danger btn-block">ゲストログイン(閲覧用)</button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
