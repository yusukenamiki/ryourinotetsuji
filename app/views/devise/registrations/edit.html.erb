<%= bootstrap_devise_error_messages! %>

<div class="container-edit2">
  <div class="card border-0 text-center text-dark">
    <%= link_to edit_user_path(@user) do %>
      <div class="text-dark p-5 dropdown-item">
        プロフィールを編集
      </div>
    <% end %>
    <hr class="my-0">
    <%= link_to edit_user_registration_path do %>
      <div class="text-dark p-5 dropdown-item active">
        パスワードを変更
      </div>
    <% end %>
    <hr class="my-0">
  </div>

  <div class="card border-0 p-5 text-left text-dark">

    <div class="text-center" style="font-size: 2.2rem; margin: 3rem 0 4.5rem;">
      <strong>パスワードを変更</strong>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group mb-5">
        <strong><%= f.label :current_password %></strong>
        <%= f.password_field :current_password,
                             autocomplete: "current-password",
                             class: "form-control",
                             required: true,
                             minlength: @minimum_password_length,
                             maxlength: '30' %>
      </div>

      <div class="form-group mb-5">
        <strong><%= f.label :password, "新しいパスワード" %></strong>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "form-control",
                             maxlength: '30' %>
      </div>

      <div class="form-group">
        <strong><%= f.label :password_confirmation, "新しいパスワードの確認" %></strong>
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "form-control",
                             maxlength: '30' %>
      </div>

      <div style="margin: 5.5rem 0 3rem;">
        <%= f.submit t('.update'), class:"btn btn-warning btn-block" %>
      </div>
    <% end %>

  </div>
</div>







<%= link_to "アカウントを削除される場合はこちら", registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete %>
