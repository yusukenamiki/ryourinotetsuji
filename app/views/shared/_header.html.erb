<div class="navbar fixed-top shadow-sm py-0 px-4" style="background-color:#fcefca; height: 6.4rem;">
  <div class="d-flex align-items-center justify-content-start">
    <%= link_to root_path, class:"link-title" do %>
      <div class="mr-3" style="font-size: 2rem; font-family: 'Kiwi Maru', serif;">レシピ館</div>
    <% end %>
    <div class="tablet-pc-link">
      <%= link_to recipes_path do %>
        <button type="button" class="btn btn-beige">レシピ一覧</button>
      <% end %>
      <%= link_to users_path do %>
        <button type="button" class="btn btn-beige">ユーザー一覧</button>
      <% end %>
    </div>
  </div>

  <div class="tablet-pc-link">
    <div class="d-flex align-items-center justify-content-end">
      <% if user_signed_in? %>
        <div class="dropdown">
          <a href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "user-icon32 rounded-circle" %>
          </a>
          <div class="dropdown-menu dropdown-menu-right py-0" aria-labelledby="navbarDropdownMenuLink">
            <div class="dropdown-header py-5">
              <div class="wrapper">
                <div>
                  <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "user-icon40 rounded-circle" %>
                </div>
                <div class="ryaku pl-4">
                  <div class="ryaku text-dark" style="font-size: 1.4rem;">
                    <strong><%= current_user.username %></strong>
                  </div>
                  <div class="ryaku" style="font-size: 1.2rem;">
                    <%= current_user.email %>
                  </div>
                </div>
              </div>
            </div>

            <div class="dropdown-divider my-0"></div>

            <%= link_to user_path(current_user), class: "dropdown-item" do %>
              <div class="text-dark py-4">
                マイページ
              </div>
            <% end %>
            <%= link_to user_favorites_path(current_user), class: "dropdown-item" do %>
              <div class="text-dark py-4">
                いいね一覧
              </div>
            <% end %>
            <%= link_to new_recipe_path, class: "dropdown-item" do %>
              <div class="text-dark py-4">
                新規投稿
              </div>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <div class="text-dark py-4">
                ログアウト
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <%= link_to new_user_registration_path do %>
          <button type="button" class="btn btn-beige">新規登録</button>
        <% end %>
        <%= link_to new_user_session_path do %>
          <button type="button" class="btn btn-beige">ログイン</button>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="openbtn1">
    <span></span>
    <span></span>
    <span></span>
  </div>

  <nav id="g-nav">
    <div id="g-nav-list">

      <div class="container-g-nav">
        <div class="yohaku-g-nav">
        </div>

        <div class="hontai">
          <% if user_signed_in? %>
            <div class="wrapper px-4 py-5">
              <div>
                <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "user-icon40 rounded-circle" %>
              </div>
              <div class="ryaku pl-4">
                <div class="ryaku text-dark" style="font-size: 1.4rem;">
                  <strong><%= current_user.username %></strong>
                </div>
                <div class="ryaku" style="font-size: 1.2rem;">
                  <%= current_user.email %>
                </div>
              </div>
            </div>

            <hr class="m-0">

            <%= link_to recipes_path do %>
              <div class="text-secondary px-4 py-5">
                レシピ一覧
              </div>
            <% end %>
            <%= link_to users_path do %>
              <div class="text-secondary px-4 py-5">
                ユーザー一覧
              </div>
            <% end %>
            <%= link_to user_path(current_user) do %>
              <div class="text-secondary px-4 py-5">
