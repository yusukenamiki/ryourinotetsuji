            <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <div class="text-secondary px-4 py-5">
                ログアウト
              </div>
            <% end %>
          <% else %>
            <%= link_to recipes_path do %>
              <div class="text-secondary px-4 py-5">
