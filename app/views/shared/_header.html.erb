<nav class="navbar navbar-expand-md navbar-light shadow-sm fixed" style="background-color:#fcefca;">

  <%= link_to root_path, class:"link-title" do %>
    <h2 class="mt-1 mr-2 py-4" style="font-family: 'Kiwi Maru', serif;">レシピ館</h2>
  <% end %>

  <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div id="menu" class="collapse navbar-collapse">
    <div class="navbar-collapse justify-content-start">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to recipes_path do %>
            <button type="button" class="btn btn-beige">レシピ一覧</button>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_path do %>
            <button type="button" class="btn btn-beige">ユーザー一覧</button>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="navbar-collapse justify-content-end">
      <ul class="navbar-nav">
      <% if user_signed_in? %>

        <li class="nav-item dropdown ml-3">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= attachment_image_tag current_user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "32x32" %>
          </a>
          <div class="dropdown-menu dropdown-menu-right py-0" aria-labelledby="navbarDropdownMenuLink">
            <div class="dropdown-header py-4 ryaku">
              <%= current_user.username %>
            </div>
            <div class="dropdown-divider my-0"></div>
            <%= link_to user_path(current_user), class: "dropdown-item" do %>
              <div class="text-secondary py-3">マイページ</div>
            <% end %>
            <%= link_to new_recipe_path, class: "dropdown-item" do %>
              <div class="text-secondary py-3">新規投稿</div>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <div class="text-secondary py-3">ログアウト</div>
            <% end %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to new_user_registration_path do %>
            <button type="button" class="btn btn-beige">新規登録</button>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_session_path do %>
            <button type="button" class="btn btn-beige">ログイン</button>
          <% end %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>

</nav>
