            <% end %>
            <%= link_to users_path do %>
              <div class="text-secondary px-4 py-5">
                ユーザー一覧
              </div>
            <% end %>
            <%= link_to new_user_registration_path do %>
              <div class="text-secondary px-4 py-5">
                新規登録
              </div>
            <% end %>
            <%= link_to new_user_session_path do %>
              <div class="text-secondary px-4 py-5">
                ログイン
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="yohaku-g-nav">
        </div>
      </div>

    </div>
  </nav>

</div>
