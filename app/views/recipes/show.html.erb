<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">レシピ詳細</h1>
</div>

<div class="col d-flex justify-content-center">
  <div class="text-center py-5">
    <div class="card" style="width: 42.5rem">

      <div class="p-3">
        <%= attachment_image_tag @recipe, :image, size: "640x480" %>
      </div>

      <div class="card-body text-left pt-0">
        <h4 class="card-title">
          <strong><%= @recipe.title %></strong>
        </h4>
        <p class="border-bottom pb-1 mb-1">
          <strong>レシピ</strong>
        </p>
        <div>
          <%= simple_format @recipe.body %>
        </div>

        <% if @recipe.user.id == current_user.id %>
          <%= link_to edit_recipe_path(@recipe) do %>
            <button type="button" class="btn btn-primary">編集</button>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>

<%= @recipe.user.username %>
