<%= render 'shared/flash_messages' %>

<div class="container p-5 bg-dark">
  <div class="d-flex justify-content-center">
    <div class="col px-0 bg-light" style="max-width: 600px">

      <div class="card shadow-sm mb-5">
        <div>
          <%= attachment_image_tag @recipe, :image, width: '100%', height: '100%' %>
        </div>

        <div class="card-body p-4">
          <div class="text-dark">
            <strong><%= @recipe.title %></strong>
          </div>

          <div class="mt-4">
            レシピ
          </div>

          <hr class="mt-1">

          <div class="mt-3" style="line-height: 2rem">
            <%= simple_format @recipe.body %>
          </div>

          <h6 class="mt-4">
            <time><%= @recipe.updated_at.strftime("%Y/%m/%d") %></time>更新
          </h6>

          <div class="img-container mt-4">
            <div>
              <% if current_user.already_favorited?(@recipe) %>
                <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
                  <i class="fas fa-heart heart-pink"></i>
                <% end %>
              <% else %>
                <%= link_to recipe_favorites_path(@recipe), method: :create do %>
                  <i class="far fa-heart"></i>
                <% end %>
              <% end %>
            </div>

            <div class="ml-2">
              <%= @recipe.favorites.count %>
            </div>
          </div>

          <% if @recipe.user.id == current_user.id %>
            <div class="btn-group mt-4" role="group">
              <%= link_to edit_recipe_path(@recipe) do %>
                <button type="button" class="btn btn-warning mr-4" style="width: 100px;">編集</button>
              <% end %>
              <%= link_to recipe_path(@recipe), method: :delete, data: {confirm: "削除しますか？"} do %>
                <button type="button" class="btn btn-danger" style="width: 100px;">削除</button>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mb-5">
        <div class="img-container">
          <div>
            <%= link_to user_path(@recipe.user) do %>
              <%= attachment_image_tag @recipe.user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "40x40" %>
            <% end %>
          </div>

          <div class="ryaku ml-4" style="width: 320px;">
            <%= link_to user_path(@recipe.user.id), class:"link-title" do %>
              <strong><%= @recipe.user.username %></strong>
            <% end %>
          </div>
        </div>

        <div class="ml-5 pl-4 mt-3 pr-4" style="word-wrap: break-word;">
          <%= simple_format @recipe.user.profile %>
        </div>
      </div>

      <div class="mb-5">
        <hr>

        <h5 class="mt-4 text-dark">
          <%= @recipe.comments.count %> 件のコメント
        </h5>

        <div class="mt-4">
          <%= form_with model: [@recipe, @comment], local: true do |f| %>
            <div class="form-group">
              <%= f.text_area :body,
                              rows: 1,
                              style: "height: 48px;",
                              class: "form-control",
                              required: true,
                              maxlength: '140',
                              placeholder: "コメントを追加…" %>
            </div>

            <%= f.submit 'コメントを投稿する', class:"btn btn-warning btn-block mt-4" %>
          <% end %>
        </div>
      </div>










      <div>
        <% @recipe.comments.each do |comment| %>

          <div class="bg-danger">
            <%= link_to user_path(comment.user.id) do %>
              <%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "40x40" %>
            <% end %>
          </div>

          <div class="bg-warning">
            <%= link_to user_path(comment.user.id), class:"link" do %>
              <%= comment.user.username %>
            <% end %>
          </div>

          <div class="bg-success">
            <span><%= time_ago_in_words(comment.created_at) %></span>前
          </div>

          <div class="bg-info" style="word-wrap: break-word;">
            <%= simple_format comment.body, {}, wrapper_tag: "div" %>
          </div>

          <div class="bg-primary">
            <% if comment.user == current_user %>
              <div class="dropdown">
                <a  type="text" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow-sm py-3" aria-labelledby="dropdownMenuButton" style="width: 120px;">
                  <%= link_to [@recipe, comment], class:"link", method: :delete, data: {confirm: "削除しますか？"} do %>
                    <i class="far fa-trash-alt px-4"></i>削除
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>

        <% end %>
      </div>










    </div>
  </div>
</div>
