<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">レシピ詳細</h1>
</div>
<%= render 'shared/flash_messages' %>

<div class="container mt-5">
  <div class="col d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-md-1">
      <div class="col mb-4" style="max-width: 40rem">
        <div class="card shadow-sm mb-5">
          <div class="text-center p-3">
            <%= attachment_image_tag @recipe, :image, width: '100%', height: '480px' %>
          </div>
          <div class="card-body text-left pt-0">
            <h4 class="card-title">
              <strong><%= @recipe.title %></strong>
            </h4>
            <p class="border-bottom pb-1 mb-1">
              <strong>レシピ</strong>
            </p>
            <div>
              <%= simple_format @recipe.body %>
            </div>
            <% if @recipe.user.id == current_user.id %>
              <%= link_to edit_recipe_path(@recipe) do %>
                <button type="button" class="btn btn-primary">編集</button>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-header">
            <div class="row">
              <div class="col-1">
                <%= attachment_image_tag @recipe.user, :profile_image, fallback: "no-image.png", class: "profile_image rounded-circle", size: "48x48" %>
              </div>
              <div class="col-11 d-flex align-items-center pl-5">
                <%= @recipe.user.username %>
              </div>
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= @recipe.user.profile %>
            </h5>
          </div>
          <%= link_to user_path(@recipe.user) do %>
            <div class="m-3">
              <%= @recipe.user.username %>さんのページへ
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
