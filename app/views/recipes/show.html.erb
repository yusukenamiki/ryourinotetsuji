<%= render 'shared/flash_messages' %>

<div class="container p-5">
  <div class="d-flex justify-content-center">
    <div class="col px-0" style="max-width: 600px">

      <div class="card shadow-sm mb-5">
        <div>
          <%= attachment_image_tag @recipe, :image, width: '100%', height: '100%' %>
        </div>

        <div class="card-body p-4">
          <div class="oya">
            <% if @recipe.user.id == current_user.id %>
              <div class="text-dark pr-3 mr-5" style="padding: 9px 0px 10px 0px;">
                <strong><%= @recipe.title %></strong>
              </div>
              <div class="ko-top0right0">
                <div class="dropdown rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <a type="text" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v py-1"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right shadow-sm py-0" aria-labelledby="dropdownMenuButton" style="width: 120px;">
                    <%= link_to edit_recipe_path(@recipe), class: "dropdown-item" do %>
                      <div class="text-secondary py-3"><i class="far fa-edit pr-4"></i>編集</div>
                    <% end %>
                    <%= link_to recipe_path(@recipe), class: "dropdown-item", method: :delete, data: {confirm: "削除しますか？"} do %>
                      <div class="text-secondary py-3"><i class="far fa-trash-alt pr-4"></i>削除</div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="text-dark" style="padding: 9px 0px 10px 0px;">
                <strong><%= @recipe.title %></strong>
              </div>
            <% end %>
          </div>

          <div class="mt-4">
            レシピ
          </div>

          <hr class="mt-1">

          <div class="mt-3" style="line-height: 2rem">
            <%= simple_format @recipe.body %>
          </div>

          <div class="mt-4">
            <time><%= @recipe.updated_at.strftime("%Y/%m/%d") %></time>更新
          </div>

          <div class="img-container mt-4">
            <div>
              <% if current_user.already_favorited?(@recipe) %>
                <%= link_to recipe_favorites_path(@recipe), method: :delete do %>
                  <i class="fas fa-heart heart-pink"></i>
                <% end %>
              <% else %>
                <%= link_to recipe_favorites_path(@recipe), method: :create do %>
                  <i class="far fa-heart"></i>
                <% end %>
              <% end %>
            </div>

            <div class="ml-2">
              <%= @recipe.favorites.count %>
            </div>
          </div>
        </div>
      </div>

      <div class="mb-5">
        <div class="img-container mr-3">
          <div>
            <%= link_to user_path(@recipe.user) do %>
              <%= attachment_image_tag @recipe.user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "40x40" %>
            <% end %>
          </div>

          <div class="ryaku ml-4">
            <%= link_to user_path(@recipe.user.id), class:"link-title" do %>
              <strong><%= @recipe.user.username %></strong>
            <% end %>
          </div>
        </div>

        <div class="ml-5 pl-4 mt-3 pr-4" style="word-wrap: break-word;">
          <%= simple_format @recipe.user.profile %>
        </div>
      </div>

      <div class="mb-5">
        <hr>

        <h5 class="mt-4 text-dark">
          <%= @recipe.comments.count %> 件のコメント
        </h5>

        <div class="mt-4">
          <%= form_with model: [@recipe, @comment], local: true do |f| %>
            <div class="form-group">
              <%= f.text_area :body,
                              rows: 1,
                              style: "height: 48px;",
                              class: "form-control",
                              required: true,
                              maxlength: '140',
                              placeholder: "コメントを追加…" %>
            </div>

            <%= f.submit 'コメントを投稿する', class:"btn btn-warning btn-block mt-4" %>
          <% end %>
        </div>
      </div>

      <div>
        <% @recipe.comments.each do |comment| %>
          <div class="oya mb-5">
            <div class="img-container mr-5">
              <div>
                <%= link_to user_path(comment.user.id) do %>
                  <%= attachment_image_tag comment.user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "40x40" %>
                <% end %>
              </div>
              <div class="ryaku ml-4" style="max-width: 54%;">
                <%= link_to user_path(comment.user.id), class:"link-title" do %>
                  <strong><%= comment.user.username %></strong>
                <% end %>
              </div>
              <div class="ml-2" style="font-size: 12px">
                <span><%= time_ago_in_words(comment.created_at) %>前</span>
              </div>
            </div>

            <div class="ko-top0right0">
              <% if comment.user == current_user %>
                <div class="dropdown rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <a  type="text" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v py-1"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right shadow-sm py-0" aria-labelledby="dropdownMenuButton" style="width: 120px;">
                    <%= link_to [@recipe, comment], class: "dropdown-item", method: :delete, data: {confirm: "削除しますか？"} do %>
                      <div class="text-secondary py-3"><i class="far fa-trash-alt pr-4"></i>削除</div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="mx-5 pl-4 mt-3 pb-5" style="word-wrap: break-word;">
              <%= simple_format comment.body, {}, wrapper_tag: "div" %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
