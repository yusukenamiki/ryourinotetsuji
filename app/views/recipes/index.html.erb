<%= render 'shared/flash_messages' %>

<div class="container py-5">
  <div class="row row-cols-1 row-cols-md-3">
    <% @recipes.each do |recipe| %>
      <div class="col mb-4" style="min-width: 20rem">

        <div class="card shadow-sm">
          <div class="text-center p-0">
            <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :image, width: '100%', height: '300px' %>
            <% end %>
          </div>

          <div class="card-body text-left p-3">
            <div class="row">
              <div class="col-2">
                <%= link_to user_path(recipe.user.id) do %>
                  <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "48x48" %>
                <% end %>
              </div>

              <div class="col-10 d-flex align-items-center mt-2">
                <h5 class="card-title ryaku">
                  <%= link_to recipe_path(recipe), class:"link" do %>
                    <strong><%= recipe.title %></strong>
                  <% end %>
                </h5>
              </div>
            </div>

            <h4 class="card-title font-weight-normal mt-2">
              <%= link_to user_path(recipe.user.id), class:"link" do %>
                <%= recipe.user.username %>
              <% end %>
            </h4>

            <h6 class="card-title mt-3 mb-2">
              <span><%= time_ago_in_words(recipe.updated_at) %></span>前更新
            </h6>

            <div class="row mt-3 mx-0">
              <div class="col-1 pl-0">
                <% if user_signed_in? %>
                  <% if current_user.already_favorited?(recipe) %>
                    <%= link_to recipe_favorites_path(recipe), method: :delete do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to recipe_favorites_path(recipe), method: :post do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                <% else %>
                  <i class="far fa-heart"></i>
                <% end %>
              </div>

              <div class="col-11 pl-0">
                <%= recipe.favorites.count %>
              </div>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @recipes %>
  </div>
  <p class="d-flex justify-content-center text-secondary mb-0">
    <%= page_entries_info @recipes %>
  </p>
</div>
