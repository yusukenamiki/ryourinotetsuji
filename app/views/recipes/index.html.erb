<div class="text-white p-5 mb-5" style="background-color:#332f28;">
  <h1 class="display-5">レシピ一覧</h1>
</div>

<div class="container">
  <div class="card-deck" style="width: 25rem">
    <% @recipes.each do |recipe| %>

      <div class="card shadow-sm mb-5">
        <div class="text-center p-0">
          <%= attachment_image_tag recipe, :image, width: '100%', height: '100%' %>
        </div>

        <div class="card-body text-left p-3">
          <div class="row">
            <div class="col-2">
              <div class="bg-success">
                <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", class: "profile_image rounded-circle", size: "48x48" %>
              </div>
            </div>

            <div class="col-10 mt-1">
              <h3 class="card-title">
                <%= recipe.user.username %>
              </h3>
            </div>
          </div>

          <h6 class="card-title mt-3 mb-0">
            <time><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
          </h6>
        </div>
      </div>

    <% end %>
  </div>
</div>
