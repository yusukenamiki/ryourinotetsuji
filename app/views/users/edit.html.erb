<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">ユーザー編集</h1>
</div>

<% if @user.errors.any? %>
  <div class="alert alert-danger pt-4 rounded-0" role="alert">
    <h2><%= pluralize(@user.errors.count, "error", locale: :en) %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-login">
  <div class="text-left p-5">
    <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :username, "ユーザー名" %><br />
      <%= f.text_field :username,
                       autofocus: true,
                       autocomplete: "email",
                       class: "form-control",
                       required: true,
                       maxlength: '100' %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "form-control",
                        required: true,
                        maxlength: '100' %>
    </div>

    <div class="form-group">
      <%= f.label :profile, "プロフィール" %><br />
      <%= f.text_area :profile,
                      rows: 5,
                      class: "form-control",
                      maxlength: '150' %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image, "プロフィール画像" %><br />
      <%= f.attachment_field :profile_image %>
    </div>

    <%= f.submit "更新", class:"btn btn-warning" %>

    <% end %>
  </div>
</div>
