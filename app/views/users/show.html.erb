<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">マイページ</h1>
</div>
<%= render 'shared/flash_messages' %>

<div class="container">
  <div class="row my-5 mx-1">
    <div class="col-3 p-0 pt-3">
      <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image rounded-circle", size: "128x128" %>
    </div>

    <div class="col-9">
      <table class="table table-borderless mt-3">
        <tr>
          <td class="align-middle">
            <h4><%= @user.username %></h4>
          </td>
          <% if @user.id == current_user.id %>
            <td class="align-middle d-flex justify-content-end pr-0">
              <%= link_to edit_user_path(@user) do %>
                <button class="btn btn-warning">プロフィールを編集</button>
              <% end %>
            </td>
          <% else %>
            <% if @user.is_followed_by?(current_user) %>
              <td class="align-middle d-flex justify-content-end pr-0">
                <%=link_to user_relationships_path(@user), method: :delete do %>
                  <button class="btn btn-danger">フォロー中</button>
                <% end %>
              </td>
            <% else %>
              <td class="align-middle d-flex justify-content-end pr-0">
                <%=link_to user_relationships_path(@user), method: :post do %>
                  <button class="btn btn-warning">フォローする</button>
                <% end %>
              </td>
            <% end %>
          <% end %>
        </tr>

        <% if @user.id == current_user.id %>
          <td class="align-middle">
            <%= @user.email %>
          </td>
        <% end %>
      </table>

      <table class="table table-borderless">
        <tr>
          <td class="align-middle pt-3" style="width:85px;">
            <h6>
              投稿<%= @user.recipes.count %>件
            </h6>
          </td>
          <td class="align-middle pt-3" style="width:130px;">
            <h6>
              フォロワー<%= link_to @user.followers.count, followers_user_path(@user), class:"link" %>人
            </h6>
          </td>
          <td class="align-middle pt-3">
            <h6>
              フォロー中<%= link_to @user.followings.count, followings_user_path(@user), class:"link" %>人
            </h6>
          </td>
        </tr>
      </table>

      <table class="table table-borderless">
        <tr>
          <td>
            <%= simple_format @user.profile %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<li class="nav-item active mr-3">
<%= link_to 'ユーザー編集', edit_user_registration_path, class:"link" %>
</li>

<div>
  <%= link_to [@user, :favorites], class:"link" do %>
    いいね一覧
  <% end %>
</div>

<div class="container">
<hr class="mb-5">
  <div class="row row-cols-1 row-cols-md-3">
    <% @user.recipes.each do |recipe| %>
      <div class="col mb-4" style="min-width: 20rem">

        <div class="card shadow-sm">
          <div class="text-center p-0">
            <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :image, width: '100%', height: '300px' %>
            <% end %>
          </div>

          <div class="card-body text-left p-3">
            <h5 class="card-title ryaku">
              <%= link_to recipe_path(recipe), class:"link" do %>
                <strong><%= recipe.title %></strong>
              <% end %>
            </h5>

            <h6 class="card-title mt-3 mb-2">
              <span><%= time_ago_in_words(recipe.updated_at) %></span>前更新
            </h6>

            <div class="row mt-3 mx-0">
              <div class="col-1 pl-0">
                <% if user_signed_in? %>
                  <% if current_user.already_favorited?(recipe) %>
                    <%= link_to recipe_favorites_path(recipe), method: :delete do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to recipe_favorites_path(recipe), method: :post do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% end %>
                <% else %>
                  <i class="far fa-heart"></i>
                <% end %>
              </div>

              <div class="col-11 pl-0">
                <%= recipe.favorites.count %>
              </div>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
