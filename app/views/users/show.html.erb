<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">マイページ</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
        <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
    </div>

    <div class="col-sm-4 d-flex align-items-center">
      <strong><%= @user.username %></strong>
    </div>

    <div class="col-sm-4 d-flex align-items-center">
      <%= @user.email %>
    </div>

    <%= @user.profile %>
  </div>
</div>
