<div class="text-white p-5" style="background-color:#332f28;">
  <h1 class="display-5">ユーザー一覧</h1>
</div>

<div class="container">
  <div class="card-deck py-5" style="width: 40rem">
    <% @users.each do |user| %>
      <div class="card shadow-sm">
        <div class="text-center p-3">
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "profile_image rounded-circle", size: "250x250" %>
          <% end %>
        </div>
        <div class="card-body">
          <h4 class="card-title">
            <%= link_to user.username, user_path(user) %>
          </h4>
          <h6 class="card-title">
            投稿数：あとで実装
          </h6>
        </div>
      </div>
    <% end %>
  </div>
</div>
