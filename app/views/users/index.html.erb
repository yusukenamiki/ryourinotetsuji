<div class="container p-5">

  <div class="d-flex justify-content-center">
    <div class="col px-0" style="max-width: 600px;">
      <div>
        <% @users.each do |user| %>
          <div class="wrapper mb-5 pb-5">
            <div class="kotei136">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "136x136" %>
              <% end %>
            </div>

            <% if user.profile.present? %>
              <div class="kahen px-4 d-flex align-items-center">
                <div>
                  <h3 class="text-ellipsis1 mb-2">
                    <%= link_to user_path(user), class:"link-title" do %>
                      <%= user.username %>
                    <% end %>
                  </h3>
                  <div class="mb-2" style="font-size: 1.2rem;">
                    <%= user.recipes.count %> 件のレシピ
                  </div>
                  <div class="text-ellipsis2" style="font-size: 1.2rem;">
                    <%= simple_format user.profile, {}, wrapper_tag: "div" %>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="kahen px-4 d-flex align-items-center">
                <div>
                  <h3 class="text-ellipsis1 mb-2">
                    <%= link_to user_path(user), class:"link-title" do %>
                      <%= user.username %>
                    <% end %>
                  </h3>
                  <div style="font-size: 1.2rem;">
                    <%= user.recipes.count %> 件のレシピ
                  </div>
                </div>
              </div>
            <% end %>

            <% if user_signed_in? %>
              <div class="kotei107 d-flex align-items-center">
                <% if user.is_followed_by?(current_user) %>
                  <%=link_to user_relationships_path(user), method: :delete do %>
                    <button class="btn btn-outline-secondary" style="width: 107px;">フォロー中</button>
                  <% end %>
                <% else %>
                  <%=link_to user_relationships_path(user), method: :post do %>
                    <button class="btn btn-dark text-white">フォローする</button>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @users %>
  </div>
  <div class="d-flex justify-content-center mb-0">
    <%= page_entries_info @users %>
  </div>
</div>
