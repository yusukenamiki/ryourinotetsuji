<div class="container p-5 bg-dark">
  <div class="d-flex justify-content-center">
    <div class="col px-0 bg-white" style="max-width: 600px">

      <div>
        <% @users.each do |user| %>


          <div class="bg-warning">
            <div class="bg-danger">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "136x136" %>
              <% end %>
            </div>

            <div class="bg-success">
              <%= link_to user_path(user), class:"link-title" do %>
                <%= user.username %>
              <% end %>
              <div>
                <%= user.recipes.count %> 件のレシピ
              </div>
              <div>
                <%= simple_format user.profile %>
              </div>
            </div>

            <div class="bg-primary">
              <% if user_signed_in? %>
                <% if user.is_followed_by?(current_user) %>
                  <%=link_to user_relationships_path(user), method: :delete do %>
                    <button class="btn btn-outline-secondary">フォロー中</button>
                  <% end %>
                <% else %>
                  <%=link_to user_relationships_path(user), method: :post do %>
                    <button class="btn btn-dark text-white">フォローする</button>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>


        <% end %>
      </div>

    </div>
  </div>
</div>





<hr>





<div class="container py-5">
  <div class="row row-cols-1 row-cols-md-3">
    <% @users.each do |user| %>
      <div class="col mb-4" style="min-width: 20rem">
        <div class="card shadow-sm">
          <div class="text-center p-3">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "rounded-circle", size: "136x136" %>
            <% end %>
          </div>
          <div class="card-body pt-0">
            <h4 class="card-title font-weight-normal">
              <%= link_to user_path(user), class:"link" do %>
                <%= user.username %>
              <% end %>
            </h4>
            <h6 class="card-title">
              投稿数：<%= user.recipes.count %>
            </h6>
            <% if user_signed_in? %>
              <% if user.is_followed_by?(current_user) %>
                <%=link_to user_relationships_path(user), method: :delete do %>
                  <button class="btn btn-outline-secondary">フォロー中</button>
                <% end %>
              <% else %>
                <%=link_to user_relationships_path(user), method: :post do %>
                  <button class="btn btn-dark text-white">フォローする</button>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @users %>
  </div>
  <div class="d-flex justify-content-center mb-0">
    <%= page_entries_info @users %>
  </div>
</div>
