<div class="text-white p-5 mb-5" style="background-color:#332f28;">
  <h1 class="display-5">ユーザー一覧</h1>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3">
    <% @users.each do |user| %>
      <div class="col mb-4" style="min-width: 20rem">
        <div class="card shadow-sm">
          <div class="text-center p-3">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "profile_image rounded-circle", size: "250x250" %>
            <% end %>
          </div>
          <div class="card-body pt-0">
            <h4 class="card-title">
              <%= link_to user.username, user_path(user) %>
            </h4>
            <h6 class="card-title">
              投稿数：<%= user.recipes.count %>
            </h6>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @users %>
  <%= page_entries_info @users %>
</div>
